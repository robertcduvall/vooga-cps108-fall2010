<?xml version="1.0" encoding="UTF-8"?>
<Level name="Asteroids">

	<SpriteGroups>
		<SpriteGroup name="playerShip">
			<RegularSprite name="playerSprite" x="400" y="300" vx="0" vy="0" q="1">
				<Visual name="Player"/>
			</RegularSprite>
		</SpriteGroup>
		
		<SpriteGroup name="asteroidGroup">
			<SpawnedSprite name ="asteroid" xRange="1000" yRange="1000" vxRange="5" vyRange="5" quantity="20">
				<Visual name="Asteroid"/>
			</SpawnedSprite> 
		</SpriteGroup>
		
		<SpriteGroup name="shotGroup">
			<RegularSprite name="shipShot" x="0" y="0" vx="0" vy="0" q="0">
				<Visual name="Shot"/>
			</RegularSprite>
		</SpriteGroup>
	</SpriteGroups>

	<CollisionGroups>
		<CollisionGroup subclass="vooga.games.asteroids.collisions.ShipToAsteroidCollision">
			<SpriteGroup name="playerShip"></SpriteGroup>
			<SpriteGroup name="asteroidGroup"></SpriteGroup>
		</CollisionGroup>
		
		<CollisionGroup subclass="vooga.games.asteroids.collisions.BulletToAsteroidCollision">
			<SpriteGroup name="shotGroup"></SpriteGroup>
			<SpriteGroup name="asteroidGroup"></SpriteGroup>
		</CollisionGroup>
		
	</CollisionGroups>
	
	<Background>
		<Visual name = "mainBG" />
	</Background>

	<Music>
	</Music>

</Level>