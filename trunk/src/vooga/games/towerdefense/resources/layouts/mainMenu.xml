<?xml version="1.0" encoding="UTF-8" ?>
<Level name="mainMenuLayout">
	<SpriteGroups>
		<SpriteGroup name="buttons">
			<Sprite module="LevelButton" x="100" y="400" levelName="easyLevel">
				<Visual name="easyButton" />
			</Sprite>
			<Sprite module="LevelButton" x="400" y="400" levelName="mediumLevel">
				<Visual name="mediumButton" />
			</Sprite>
			<Sprite module="LevelButton" x="700" y="400" levelName="hardLevel">
				<Visual name="hardButton" />
			</Sprite>
		</SpriteGroup>
		<SpriteGroup name="title">
			<Sprite module="BetterSprite" random="false" x="150" y="100" vx="0" vy="0" quantity="1"> 
				<Visual name="title" />
			</Sprite>
		</SpriteGroup>
	</SpriteGroups>
	
	<Backgrounds>
		<Background module="ImageBackground" widthKey="gameWidth" heightKey="gameHeight">
			<Visual name ="mainMenuBackground"/>
		</Background>
	</Backgrounds>
	
	<Music name="music">
		<Sound name ="mainMenuMusic" />
	</Music>
	
</Level>