<?xml version="1.0" encoding="UTF-8"?>


<Level name="Level 1"
	xmloverlaypath="src/vooga/games/mariogame/resources/overlays/GameOverlays.xml">

	<SpriteGroups>
		<SpriteGroup name="marioGroup">
			<Sprite random="false" x="30" y="400" vx="0" vy="0" quantity="1"
				class="vooga.games.mariogame.MarioSprite">
				<Visual name="marioMovement" />
			</Sprite>
		</SpriteGroup>

		<SpriteGroup name="goombaGroup">
			<Sprite random="true" xMin="50" yMin="50" xMax="1000" yMax="50"
				vxMin=".01" vyMin=".1" vxMax=".01" vyMax=".1" quantity="3"
				class="vooga.games.mariogame.Enemy">
				<Visual name="Goomba" />
			</Sprite>
		</SpriteGroup>
	</SpriteGroups>

	<CollisionGroups>
		<CollisionGroup subclass="vooga.games.mariogame.MarioToEnemyCollision">
			<SpriteGroup name="marioGroup" />
			<SpriteGroup name="goombaGroup" />
		</CollisionGroup>
		
		<CollisionGroup subclass="vooga.games.mariogame.MarioToTileCollision">
			<SpriteGroup name="marioGroup" />
			<SpriteGroup name="Map Group" />
		</CollisionGroup>
		
		<CollisionGroup subclass="vooga.games.mariogame.EnemyToTileCollision">
			<SpriteGroup name="goombaGroup" />
			<SpriteGroup name="Map Group" />
		</CollisionGroup>
	</CollisionGroups>

	<Map>
		<MapGroup name="Map0">
			<Association char="F"
				object="vooga.games.mariogame.tiles.IndestructibleTile" image="Grass Tile" />
			<Association char="D"
				object="vooga.games.mariogame.tiles.IndestructibleTile" image="Dirt Tile" />
			<Association char="B" object="vooga.games.mariogame.tiles.BreakTile"
				image="Break Tile" />
			<Association char="C"
				object="vooga.games.mariogame.tiles.ChangingTile" image="Item Tile 1" />
			<Association char="G" object="vooga.games.mariogame.tiles.ItemTile"
				image="Item Tile 2" />
			<Association char="S" object="vooga.games.mariogame.tiles.CoinTile"
				image="Item Tile 1" />
		</MapGroup>
	</Map>

	<Backgrounds>
		<Visual name="Space BG" />
	</Backgrounds>

	<Music>
		<Sound name="Level Music" />
	</Music>

</Level>