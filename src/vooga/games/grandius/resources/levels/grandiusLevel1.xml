<?xml version="1.0" encoding="UTF-8" ?>
<Level name="easyLevel" xmloverlaypath="src/vooga/games/grandius/resources/overlays.xml">

	<SpriteGroups>
		<SpriteGroup name="backgroundGroup">
			<RegularSprite name="backgroundSprite" x="0" y="0" vx="0" vy="0" quantity="1">
				<Visual name="BG" />
			</RegularSprite>
		</SpriteGroup>
		<SpriteGroup name="playerGroup">
			<Player name="playerSprite" /> <!-- This shouldn't need an x, y, vx, vy, etc. because it's al defined in the Player class. -->
		</SpriteGroup>
		<SpriteGroup name="enemyGroup">
			<SpawnedSprite name="enemySprite" xRange="800" yRange="600" vxRange="-0.05" vyRange="0" quantity="10">
				<Visual name="Zipster" /> 
			</SpawnedSprite>
		</SpriteGroup>
	</SpriteGroups>

	<CollisionGroups>
		<CollisionGroup subclass="vooga.games.grandius.collisions.PlayerEnemyCollision">
			<SpriteGroup name="playerGroup"></SpriteGroup>
			<SpriteGroup name="enemyGroup"></SpriteGroup>
		</CollisionGroup>
	</CollisionGroups>
	
	<Background name="BG" />
	<Music />
	<Map />
	
	
